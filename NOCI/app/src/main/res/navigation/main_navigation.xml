<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@id/navigation_notes">

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.noci.notes.NotesFragment"
        android:label="NotesFragment"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notesFragment2_to_journalFragment"
            app:destination="@id/navigation_journal"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_journal"
        android:name="com.example.noci.journal.JournalFragment"
        android:label="JournalFragment"
        tools:layout="@layout/fragment_journal">
        <action
            android:id="@+id/action_navigation_journal_to_settingsFragment"
            app:destination="@id/navigation_settings" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.noci.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>
</navigation>