<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5491CF</item>
        <item name="colorPrimaryDark">#5491CF</item>
        <item name="colorAccent">#5491CF</item>
        <item name="backgroundColor">#5491CF</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <!-- the item below is used for calendar (DatePicker) point backgroundColor-->
        <item name="colorAccent">#FFFFFF</item>
        <item name="backgroundColor">#000000</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

        // For full screen activity (Optional)
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>