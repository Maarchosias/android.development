<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="inputViewModel"
            type="com.example.noci.lists.input.ListsInputViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/input_fragment_title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/mainTopHeader"
            android:elevation="6dp"
            android:gravity="center|end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/input_fragment_title"
            android:textColor="@color/mainPageDay"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/add_title"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/input_fragment_note"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/input_fragment_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_to_list"
                app:layout_constraintBottom_toTopOf="@id/add_to_text" />

        <ImageView
            android:id="@+id/add_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> inputViewModel.addToList()}"
            android:src="@drawable/ic_type"
            app:layout_constraintBottom_toBottomOf="@+id/add_to_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_to_text"
            app:layout_constraintTop_toTopOf="@+id/add_to_text" />

        <EditText
            android:id="@+id/add_to_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="ADD TO LIST"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/show_list"
            app:layout_constraintEnd_toStartOf="@id/add_to_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/show_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="184dp"
            android:gravity="center"
            android:textSize="18sp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_to_text"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>